11 6 * * * root /usr/bin/mysqldump -P ${MYSQL_PORT} -h legendhub -u ${MYSQL_USER} -p${MYSQL_PASSWORD} --single-transaction --quick --lock-tables=false -B ${MYSQL_DATABASE} | gzip >> /backups/private/database_`date +\%m-\%d-\%Y`.sql.gz
12 6 * * * root /usr/bin/mysqldump -P ${MYSQL_PORT} -h legendhub -u ${MYSQL_USER} -p${MYSQL_PASSWORD} --single-transaction --quick --lock-tables=false --no-data ${MYSQL_DATABASE} | sed -e 's/DEFINER[ ]*=[ ]*[^*  ]*\*/\*/' > /backups/public/database.sql
13 6 * * * root /usr/bin/mysqldump -P ${MYSQL_PORT} -h legendhub -u ${MYSQL_USER} -p${MYSQL_PASSWORD} --single-transaction --quick --lock-tables=false --no-create-info --skip-triggers --ignore-            table=${MYSQL_DATABASE}.AuthTokens --ignore-table=${MYSQL_DATABASE}.MemberRoleMap --ignore-table=${MYSQL_DATABASE}.Members --ignore-table=${MYSQL_DATABASE}.NotificationChanges --ignore-        table=${MYSQL_DATABASE}.NotificationQueue --ignore-table=${MYSQL_DATABASE}.NotificationSettings --ignore-table=${MYSQL_DATABASE}.Notifications --ignore-table=${MYSQL_DATABASE}.Permissions --ignore-table=${MYSQL_DATABASE}.PersistentLogins ${MYSQL_DATABASE} >> /backups/public/database.sql

